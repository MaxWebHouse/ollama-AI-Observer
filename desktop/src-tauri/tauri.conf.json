{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.observer.dev",
  "productName": "Observer",
  "version": "0.1.1",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8000 localhost:8000; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Observer",
        "width": 1600,
        "height": 1200,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "python/**/*"
    ]
  },
  "plugins": {
    "http": {
      "all": true,
      "scope": ["http://localhost:8000/*"]
    }
  }
}
