{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.observer.dev",
  "productName": "Observer",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8000 localhost:8000; script-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Observer",
        "width": 800,
        "height": 600
      }
    ]
  },
  "plugins": {
    "http": {
      "all": true,
      "scope": ["http://localhost:8000/*"]
    }
  }
}
